<UserControl x:Class="GameClient.DisplayControls.HealthBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="6" d:DesignWidth="60">
    <Canvas>
        <Rectangle x:Name="redRect" Width="{Binding HealthBarWidthFull}" Height="{Binding HealthBarHeight}" Fill="Red"/>
        <Rectangle x:Name="greenRect" Width="{Binding HealthBarWidth}" Height="{Binding HealthBarHeight}" Fill="Green"/>
    </Canvas>
</UserControl>
